<section id="servicios" class="container">

    <div class="container-services">

      <img src="/img/espada.png" alt="Barberia Vikingo" class=" imagen izquierda">

      <div class="texto">
        <p>Corte de cabello.</p>
        <p>Afeitado tradicional.</p>
        <p>Arreglo de barba.</p>
        <p>Corte de bigote.</p>
        <p>Limpieza facial.</p>
        <p>Tratamientos capilares.</p>
      </div>

      <img src="/img/espada.png" alt="Barberia Vikingo" class=" imagen derecha">

    </div>

</section>

<style>
    #servicios .container-services{
        display: flex;
        align-items: center;
        justify-content:space-between;
        position: relative;
        width: 100%;
        height: 700px; 
        margin: 0 auto; 
        top:20px
         
    }
    .imagen{
        width: 85px;
        height: auto;
        opacity: .7;
    }
    .izquierda{
       margin-left: 40px;
    }
    .derecha{
        margin-right: 40px;
        transform: rotate(180deg);
    }
    .texto{
        font-size: 78px;
        text-align: center;
    }
    .texto p{
        margin: 0;
        padding: 0;
        margin-bottom: 15px;
    }
    

</style>
